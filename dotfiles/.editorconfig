# ============================================================
# EditorConfig for Cross-Platform Development
# ============================================================

# top-most EditorConfig file
root = true

############################################################
# Default settings for all files
############################################################
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
tab_width = 4

############################################################
# Shell scripts / Bash / Zsh
############################################################
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2
end_of_line = lf

############################################################
# Python
############################################################
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88
end_of_line = lf

############################################################
# Java
############################################################
[*.java]
indent_style = space
indent_size = 4
end_of_line = lf

############################################################
# JavaScript / TypeScript / JSX / TSX
############################################################
[*.{js,ts,jsx,tsx}]
indent_style = space
indent_size = 2
end_of_line = lf

############################################################
# JSON / YAML / TOML / INI / config files
############################################################
[*.{json,yml,yaml,toml,ini,cfg}]
indent_style = space
indent_size = 2
end_of_line = lf

############################################################
# Markdown / RST / Text
############################################################
[*.{md,rst,txt}]
trim_trailing_whitespace = false
end_of_line = lf
indent_style = space
indent_size = 2

############################################################
# Makefiles (must use tabs!)
############################################################
[Makefile]
indent_style = tab

[*.mk]
indent_style = tab

############################################################
# XML / HTML / CSS
############################################################
[*.{xml,html,css}]
indent_style = space
indent_size = 2
end_of_line = lf

############################################################
# Dockerfiles
############################################################
[Dockerfile]
indent_style = space
indent_size = 2
end_of_line = lf

