# Allow aliases to be sudo'ed (e.g. 'sudo ll')
alias sudo='sudo '

alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias ~='cd ~'
alias -- -='cd -'  # Go back to previous directory

alias grep='rg --smart-case'
alias find='fd'
alias ls='eza --icons --group-directories-first'

# Quickly reload bash configuration
alias reload='source ~/.bashrc && echo "Bash config reloaded."'

# Show my public IP (useful for whitelisting)
alias myip='curl ifconfig.me'

# Usage: cv some-project-name
# It finds the folder and opens it in VS Code
cv() {
    local dir
    dir=$(fd --type d --max-depth 3 . "$WORKSPACE" | fzf --query="$1" --select-1 --exit-0)
    if [ -n "$dir" ]; then
        code "$dir"
    fi
}
